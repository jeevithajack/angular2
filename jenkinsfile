	pipeline {
	     agent any
	 
	     environment {
		 BUILD_DIR = '/var/lib/jenkins/workspace/pipeline' // Change this to your Angular app's build output directory
		 APACHE_ROOT = '/var/www/html'
		 
		   // Change this to your Apache2 server's root directory
	     }
	 
	     stages {
		 stage('Checkout') {
		     steps {
		         checkout scm
		     }
		 }
	 
		 stage('Install Dependencies') {
		     steps {
		         sh '''
		               cd ${BUILD_DIR}
		               npm install
		            '''
		     }
		 }
	 
		 stage('Build Angular App') {
		     steps {
		         sh 'ng build --prod'
		     }
		 }
	 
		 stage('Deploy to Apache2') {
		     steps {
		         sh 'sudo cp -R ${BUILD_DIR}/* ${APACHE_ROOT}'
		         sh 'sudo chown -R www-data:www-data ${APACHE_ROOT}'
		         sh 'sudo chmod -R 755 ${APACHE_ROOT}'
		     }
		 }
	     }
	 }
