	pipeline {
	     agent any
	 
	     environment {
		 BUILD_DIR = 'angular2' // Change this to your Angular app's build output directory
		 APACHE_ROOT = '/var/www/html'
		 
		   // Change this to your Apache2 server's root directory
	     }
	 
	     stages {
		 stage('Checkout') {
		     steps {
		         checkout scm
		     }
		 }
	 
		 stage('Build Angular App') {
		     steps {
		         sh 'ng build --prod'
		     }
		 }
         }
    }
